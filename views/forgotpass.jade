doctype html
html(lang='en')
  head
    meta(charset='UTF-8')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    title V3 Forgot Password
    // BOOTSTRAP
    script(src='https://code.jquery.com/jquery-3.4.1.slim.min.js', integrity='sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n', crossorigin='anonymous')
    script(src='https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js', integrity='sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo', crossorigin='anonymous')
    script(src='https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js', integrity='sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6', crossorigin='anonymous')
    link(rel='stylesheet', href='https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css', integrity='sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh', crossorigin='anonymous')
    // fonts
    link(href='https://fonts.googleapis.com/css?family=Maven+Pro|Montserrat|Raleway&display=swap', rel='stylesheet')
    // css
    style.
      * { font-family: 'Montserrat', sans-serif;
      font-family: 'Raleway', sans-serif;
      font-family: 'Maven Pro', sans-serif;
      }
      .bg{
      background:linear-gradient(rgba(0,0,0,0.7), rgba(0,0,0,0.9)), url("https://images.pexels.com/photos/3815585/pexels-photo-3815585.jpeg?auto=compress&cs=tinysrgb&dpr=2&h=750&w=1260");
      background-repeat: no-repeat;
      width:100%;
      height: auto;
      background-attachment:fixed
      }
      #navStyle{
        -webkit-box-shadow: -1px 4px 26px 11px rgba(0,0,0,0.75);
        -moz-box-shadow: -1px 4px 26px 11px rgba(0,0,0,0.75);
        box-shadow: -1px 4px 26px 11px rgba(0,0,0,0.75);
      }
      .form-container{
      color:whitesmoke;
      border: 1px solid lightslategray;
      padding: 50px 60px;
      margin-top: 20vh;
      -webkit-box-shadow: -1px 4px 26px 11px rgba(0,0,0,0.75);
      -moz-box-shadow: -1px 4px 26px 11px rgba(0,0,0,0.75);
      box-shadow: -1px 4px 26px 11px rgba(0,0,0,0.75);
      }
      .form-container a{
      color: rgb(40, 221, 212);
      text-decoration-line: underline;
      padding: 1rem;
      }
  body.bg
    // Navigation
    nav.navbar.navbar-expand-lg.navbar-dark#navStyle(style='background: rgba(10,10,10,0.7)')
      a.navbar-brand(href='#') 
        img(src="/images/v3logo.png", alt="logo for v3 website", style='width:3.5rem;')
      h4.text-center.text-light.my-auto Value Three
      button.navbar-toggler(type='button', data-toggle='collapse', data-target='#navbarNav', aria-controls='navbarNav', aria-expanded='false', aria-label='Toggle navigation')
        span.navbar-toggler-icon
      #navbarNav.collapse.navbar-collapse
        ul.navbar-nav
          li.nav-item.mx-2.active
            a.nav-link(href='/') 
                h6.my-auto Home
          li.nav-item.mx-2
            a.nav-link(href='signup') 
                h6.my-auto Signup
          li.nav-item.mx-2
            a.nav-link(href='contact') 
                h6.my-auto Contact us
          li.nav-item.mx-2
            a.nav-link(href='profile') 
                h6.my-auto Profile
    // navigation end
    .container-fluid
      .row
        .col-xs-12.col-md-4.col-sm-4
          form.form-container(action='generatepass', role='form', method="post")
            h3 Generate Temporary Password
            small #{noemail} #{yesemail}
            .form-group
              label.text-secondary(for='exampleInputEmail1') Email address
              input#exampleInputEmail1.form-control(type='email', aria-describedby='emailHelp', name='email')
            button.btn.btn-success.btn-block(type='submit') Submit

        .col-md-1.col-sm-1

        .col-xs-12.col-md-7.col-sm-7
          // form start
          

          form.form-container(action='forgotpass', role='form', method="post")
            p.text-justify(style='color:salmon;') Generate Temporary Password First
            small(style="color:salmon;") #{nomatch}
            p.text-justify(style='color:salmon;') #{passnomatch}
            h1 Forgot Password
            .form-group.text-secondary
              label(for='exampleInputEmail1') Email address
              input#exampleInputEmail1.form-control(type='email', aria-describedby='emailHelp', name='email')
            .form-group.text-secondary
              label(for='temppass') Temporary Password
              input#exampleInputPassword1.form-control(type='password', name='temppass')
            .form-group.text-secondary
              label(for='newpass') New Password
              input#exampleInputPassword1.form-control(type='password', name='newpass')
            .form-group.text-secondary
              label(for='confirmpass') Confirm New Password
              input#exampleInputPassword1.form-control(type='password', name='confirmpass')
            button.btn.btn-success.btn-block(type='submit') Submit

      .row(style='height:20vh')
    .container-fluid
      .row(style='height:20vh;background:rgba(220,220,220,0.2)')
        .col.text-center.my-auto.py-auto
            h6.text-light Footer Placeholder
              
          // form end

